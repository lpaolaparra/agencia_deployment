h1.text-center.mb-5 #{pagina}
.row.proximos-viajes    
    each viaje in viajes
        .col-md-6.col-lg-4.mb-4
            .card
                img(src=`img/destinos_${viaje.imagen}.jpg`, class="img-fluid")
                .card-body
                    h2=viaje.titulo
                    p
                        span(style='font-size: 2em; color: #DA4167')
                            i.fas.fa-calendar-alt.mr-2
                        | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                    p
                        span(style='font-size: 2em; color: #DA4167')
                            i.fas.fa-dollar-sign.mr-2
                        |#{viaje.precio }
                    p=viaje.descripcion.substr(0,100)
                    a(href=`viajes/${viaje.id}`,class="btn btn-success btn-block") Mas informacion
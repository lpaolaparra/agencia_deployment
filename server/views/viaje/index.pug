extends ../layout/index
block contenido 
    main.container.mt-5
        .row
            .col-md-5
               img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, class="img-fluid")
            .col-md-7
                h1 #{viaje.titulo}
                p
                    span(style='font-size: 2em; color: #DA4167')
                        i.fas.fa-calendar-alt.mr-2
                    | Fecha Ida: #{viaje.fecha_ida} - Fecha Vuelta: #{viaje.fecha_vuelta}
                p
                    span(style='font-size: 2em; color: #DA4167')
                        i.fas.fa-dollar-sign.mr-2
                    |#{viaje.precio } CO
                p
                    span(style='font-size: 2em; color: #DA4167')
                        i.fas.fa-users.mr-2
                    |#{viaje.disponibles } Disponibles
                p=viaje.descripcion